extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/pagination.pug
include ../../mixins/search.pug
include ../../mixins/alert.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/sort.pug
include ../../mixins/noPermission.pug
include ../../mixins/moment.pug

block main 

    if(userRole.permissions.includes("products_view"))
        +alert-success("5000")
        +alert-error("5000")
                

        h1 Danh sách sản phẩm

        .card.mb-3 
            .card-header Bộ lọc và Tìm kiếm 
            .card-body 
                .row
                    .col-6
                        +filter-status(filterStatus)

                    .col-6 
                        +search(keyword)

        +sort()


        .card.mb-3 
            .card-header Danh sách 
            .card-body 
                .row 
                    .col-8
                        if (userRole.permissions.includes("products_edit") || userRole.permissions.includes("products_delete"))
                            +form-change-multi(`${prefixAdmin}/products/change-multi?_method=PATCH`, "products")
                    .col-4
                        if(userRole.permissions.includes("products_create"))
                            a(
                                href = `${prefixAdmin}/products/create`
                                class= "btn btn-outline-success"
                            ) + Thêm mới

                table(
                    class="table table-hover table-sm"
                    checkbox-multi
                )
                    thead 
                        tr 
                            th 
                                input(type="checkbox" name="checkall")
                            th STT 
                            th Hình ảnh
                            th Tiêu đề 
                            th Giá
                            th Vị trí
                            th Trạng thái
                            th Người tạo
                            th Người cập nhật
                            th Hành động

                    tbody 
                        if(products.length > 0)
                            each item, index in products
                                tr 
                                    td 
                                        input(
                                            type="checkbox" 
                                            name="id"
                                            value=item.id
                                            )
                                    td #{index + 1}
                                    td 
                                        img(src=item.thumbnail 
                                        alt= item.title 
                                        width= "100px"
                                        height= "auto"
                                        )
                                    td #{item.title}
                                    td #{item.price}$
                                    td 
                                        input(
                                            type="number"
                                            value= item.position 
                                            style="width: 60px"
                                            min="1"
                                            name="position"
                                        )
                                    td 
                                        if(userRole.permissions.includes("products_edit"))
                                            if(item.status == "active")
                                                a(
                                                    href="javascript:;"
                                                    data-status = item.status
                                                    data-id = item.id 
                                                    button-change-status
                                                    class="badge badge-success"
                                                ) Hoạt đông 
                                            else 
                                                a(
                                                    href="javascript:;"
                                                    data-status = item.status
                                                    data-id = item.id 
                                                    button-change-status 
                                                    class="badge badge-danger"
                                                ) Dừng hoạt đông
                                        else 
                                            if(item.status == "active")
                                                span(
                                                    class="badge badge-success"
                                                ) Hoạt động 
                                            else 
                                                span(
                                                    class="badge badge-danger"
                                                ) Dừng hoạt động
                                    td 
                                        p #{item.userFullname}
                                        p
                                            +formatDate(item.createdBy.createdAt)
                                    td 
                                        - const updatedBy = item.updatedBy.slice(-1)[0]
                                        if (updatedBy)
                                            p #{updatedBy.userFullName}
                                            p 
                                                +formatDate(updatedBy.updatedAt)
                                    td 
                                        a(
                                            href = `${prefixAdmin}/products/detail/${item.id}`
                                            class ="btn btn-secondary btn-sm"
                                            ) Chi tiết
                                        if(userRole.permissions.includes("products_edit"))
                                            a(
                                                href = `${prefixAdmin}/products/edit/${item.id}`
                                                class="btn btn-warning btn-sm"
                                                ) Sửa
                                        if(userRole.permissions.includes("products_delete")) 
                                            button(
                                                class="btn btn-danger btn-sm ml-1"
                                                data-id= item.id
                                                button-delete 
                                                ) Xóa
                        else
                            tr 
                                td(colspan="8" class="text-center") Không có sản phẩm

        +pagination(pagination)

        form(
            action=""
            method="POST"
            id="form-change-status"
            data-path=`${prefixAdmin}/products/change-status`
            ) 

        form(
            action=""
            method="POST"
            id="form-delete-item"
            data-path=`${prefixAdmin}/products/delete`
            )    

        script(src="/admin/js/product.js") 
    else
        +noPermission("Bạn không có quyền truy cập chức năng này!")   