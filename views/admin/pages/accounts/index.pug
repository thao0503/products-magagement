extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/moment.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug

block main 
    +alert-success("5000")
    +alert-error("5000")

    h1(class="mb-4") Danh sách tài khoản
    .card.mb-3 
        .card-header Bộ lọc và Tìm kiếm 
        .card-body 
            .row
                .col-6
                    +filter-status(filterStatus)
                .col-6 
                    +search(keyword, "Họ và tên")

    .card.mb-3 
        .card-header Danh sách
        .card-body 
            .row 
                .col-8
                .col-4.text-right
                    if(userRole.permissions.includes("accounts_create"))
                        a(
                            href = `${prefixAdmin}/accounts/create`
                            class= "btn btn-outline-success"
                        ) + Thêm mới

            table(
                class="table table-hover table-sm"
                )
                    thead 
                        tr 
                            th STT 
                            th Avatar
                            th Họ tên
                            th Phân quyền
                            th Email
                            th Trạng thái
                            th Người tạo
                            th Người cập nhật
                            th Hành động

                    tbody 
                        if(accounts.length > 0)
                            each item, index in accounts
                                tr 
                                    td #{index + 1}
                                    td 
                                        img(src=item.avatar 
                                        alt= item.fullName 
                                        width= "100px"
                                        height= "auto"
                                        )
                                    td #{item.fullName}
                                    td
                                        if(item.role)
                                            span #{item.role.title}
                                        else  
                                            span Tài khoản chưa được phân quyền 
                                    td #{item.email}
                                    td 
                                        if(userRole.permissions.includes("accounts_edit"))
                                            if(item.status == "active")
                                                a(
                                                    href="javascript:;"
                                                    data-status = item.status
                                                    data-id = item.id 
                                                    button-change-status
                                                    class="badge badge-success"
                                                ) Hoạt đông 
                                            else 
                                                a(
                                                    href="javascript:;"
                                                    data-status = item.status
                                                    data-id = item.id 
                                                    button-change-status 
                                                    class="badge badge-danger"
                                                ) Dừng hoạt đông
                                        else 
                                            if(item.status == "active")
                                                span(
                                                    class="badge badge-success"
                                                ) Hoạt động 
                                            else 
                                                span(
                                                    class="badge badge-danger"
                                                ) Dừng hoạt động
                                    td 
                                        if(item.createdBy.userFullName)
                                            p #{item.createdBy.userFullName}
                                            p
                                                +formatDate(item.createdBy.createdAt)
                                    td 
                                        - const updatedBy = item.updatedBy.slice(-1)[0]
                                        if (updatedBy)
                                            p #{updatedBy.userFullName}
                                            p 
                                                +formatDate(updatedBy.updatedAt)
                                    td 
                                        a(
                                            href = `${prefixAdmin}/accounts/detail/${item.id}`
                                            class ="btn btn-secondary btn-sm"
                                            ) Chi tiết
                                        if(userRole.permissions.includes("accounts_edit"))
                                            a(
                                                href = `${prefixAdmin}/accounts/edit/${item.id}`
                                                class="btn btn-warning btn-sm"
                                                ) Sửa 
                                        if(userRole.permissions.includes("accounts_delete"))
                                            button(
                                                class="btn btn-danger btn-sm ml-1"
                                                data-id= item.id
                                                button-delete 
                                                ) Xóa
                        else
                            tr 
                                td(colspan="8" class="text-center") Không tìm thấy tài khoản nào!

    form(
        action=""
        method="POST"
        id="form-delete-item"
        data-path=`${prefixAdmin}/accounts/delete`
        )                               

    form(
        action=""
        method="POST"
        id="form-change-status"
        data-path=`${prefixAdmin}/accounts/change-status`
        ) 

    script(src="/admin/js/account.js") 
