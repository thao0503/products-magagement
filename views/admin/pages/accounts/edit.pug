extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
    +alert-error(5000)
    +alert-success(5000)

    h1(class="mb-4") Cập nhật tài khoản 

    if(roles)
        form(
            action= `${prefixAdmin}/accounts/edit/${account.id}?_method=PATCH`
            id= "form-edit-account"
            method="POST"
            enctype="multipart/form-data"
        )
            div(class="form-group")
                label(for="fullName") Họ tên *
                input(
                    type= "text"
                    class="form-control"
                    id= "fullName"
                    name="fullName"
                    value=account.fullName
                    required
                )
            div(class="form-group")
                label(for="email") Email *
                input(
                    type= "email"
                    class="form-control"
                    id= "email"
                    name="email"
                    value=account.email
                    required
                )
            div(class="form-group")
                label(for="password") Mật khẩu 
                input(
                    type= "password"
                    class="form-control"
                    id= "password"
                    name="password"
                )
            div(class="form-group")
                label(for="phone") Số điện thoại
                input(
                    type= "text"
                    class="form-control"
                    id= "phone"
                    name="phone"
                    value=account.phone
                )
            div(class="form-group"
            upload-image
            )
                label(for="avatar") Ảnh
                input(
                    type= "file"
                    class="form-control-file"
                    id= "avatar"
                    name="avatar"
                    accept="image/*"
                    upload-image-input
                )
                div(class="image-preview-container" style="position: relative; display: block;")
                    img(src=account.avatar upload-image-preview)
                    button(type="button" class="btn btn-danger btn-sm remove-image-button") X
            div(class="form-group")
                label(for="role_id") Phân quyền 
                select(name="role_id" id="role_id" class="form-control")
                    option(disabled) -- Chọn  --
                    each item in roles
                        option(
                            value=item.id
                            selected=(item.id == account.role_id ? true : false)
                            ) #{item.title}
            div(class="form-group form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusActive"
                    name="status"
                    value="active"
                    checked=(account.status == "active" ? true : false)
                )
                label(for="statusActive" class="form-check-label") Hoạt động 
            div(class="form-group form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusInactive"
                    name="status"
                    value="inactive"
                    checked=(account.status == "inactive" ? true : false)
                )
                label(for="statusInactive" class="form-check-label") Dừng hoạt động 
            div(class="form-group")
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Cập nhật
    else
        p Vui lòng tạo nhóm quyền trước khi cập nhật tài khoản! 
        p 
            a(
                href = `${prefixAdmin}/roles/create`
                class= "btn btn-secondary"
            ) Tạo nhóm quyền

